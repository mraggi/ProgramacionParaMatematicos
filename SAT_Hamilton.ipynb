    "def random_graph(n):\n",
    "    A = [[0]*n for i in range(n)]\n",
    "    for u in range(n-1):\n",
    "        for v in range(u+1,n):\n",
    "            if random.random() < 0.5:\n",
    "                A[u][v] = 1\n",
    "                A[v][u] = 1\n",
    "    return A"
   ]
